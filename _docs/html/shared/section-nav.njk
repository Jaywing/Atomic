{% macro navbarItem(id, title, active, ready) %}
<li class="c-menu__item{% if id == active %} is-active{% endif %}">
  {% if ready %}
    <a href="{{ baseurl }}/docs/{{id}}" class="c-menu__link">{{title}}</a>
  {% else %}
    <a class="c-menu__link is-disabled" disabled>{{title}}</a>
  {% endif %}
</li>
{% endmacro %}

{% from 'macros/toggle-button.njk' import ToggleButton %}

<nav class="o-container o-container--centered o-container--fluid c-nav-responsive c-nav-responsive@md">

  {{ ToggleButton("parent", "c-toggle-button--hideText") }}

  <ul class="c-menu c-menu--vertical c-menu@md">
    <li class="c-menu__item c-menu__item--left w-logo">
      <a href="{{ baseurl }}/">
        <img src="{{ baseurl }}/images/jaywing-logo.svg" alt="Jaywing">
      </a>
    </li>
    {% for section in docs_sections %}
      {{navbarItem(section.id, section.title, sectionid, section.ready)}}
    {% endfor %}
  </ul>

</nav>
