<h2>Usage</h2>

<h4>Form</h4>

<div class="c-example">
  <form class="c-form">
    <fieldset>
      <legend>Form</legend>
      <input type="text" placeholder="c-text input" class="c-form__input c-form__input--inline">
      <input type="password" placeholder="Password input" class="c-form__input c-form__input--inline">
      <select class="c-form__select c-form__select--inline">
        <option>Option 01</option>
        <option>Option 02</option>
      </select>
      <button class="c-button">c-button</button>
      <label><input type="checkbox" class="c-form__check c-form__check--inline"> Checkbox</label>
      <label><input type="radio" class="c-form__radio c-form__radio--inline"> Radio</label>
      <textarea cols="30" rows="5" placeholder="Textarea" class="c-form__text c-form__text--inline"></textarea>
    </fieldset>
  </form>
</div>

