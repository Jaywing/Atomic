{% from 'components/Menu/MenuItem.component.njk' import MenuItem %}

{% macro Menu(
menuItems,
classList,
dataModule,
activeItem,
activeClass) %}

  {% if menuItems | length %}
    <ul class="c-menu {{ classList }}" {% if dataModule %}data-module='{{dataModule}}'{% endif %}>
      {% for item in menuItems %}
        {{ MenuItem(item, activeItem, activeClass) }}
      {% endfor %}
    </ul>
  {% endif %}

{% endmacro %}
