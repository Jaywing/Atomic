{% from 'components/DropdownMenu/DropdownMenuItem.component.njk' import MenuItem %}

{% macro Menu(
menuItems,
classList,
activeItem,
activeClass) %}

  {% if menuItems | length %}
    <ul class="c-menu c-menu--dropdown {{ classList }}" data-module="Menu">
      {% for item in menuItems %}
        {{ MenuItem(item, activeItem, activeClass) }}
      {% endfor %}
    </ul>
  {% endif %}

{% endmacro %}
