{% from '_components/LinkMenu.njk' import LinkMenu %}
{% from '_components/ToggleButton.njk' import ToggleButton %}

{% macro NavSimple(
          id,
          menuItems,
          activeItem,
          classList,
          menuClassList,
          menuTitle,
          menuTitleClassList,
          togglerClassList,
          breakpoint = 'Md') %}

  {% set menuClassList = menuClassList + " NavSimple-menu Menu--vertical" %}
  {% set togglerClassList = togglerClassList + " NavSimple-toggler"%}

  {% if breakpoint %}
    {% set classList = classList + ' NavSimple' + breakpoint %}
    {% set menuClassList = menuClassList + ' Menu' + breakpoint %}
  {% endif %}

  {% set targetJson = '{"target": "#' + id + '"}' %}

  <nav id="{{ id }}" class="NavSimple {{ classList }}">
    {{
      ToggleButton(
        "{\"target\":\"#" + id + "\"}",
        togglerClassList)
    }}
    {{
      LinkMenu(
        menuItems,
        menuClassList,
        activeItem,
        menuTitle,
        menuTitleClassList)
    }}
  </nav>

{% endmacro %}